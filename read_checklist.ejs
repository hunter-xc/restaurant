                <div class="home-header-main">
                    <div style="padding-left: 15px; padding-right: 20px;">			
                        <a href="/">Home</a>  <i class="fa fa-angle-right"></i> <a href="/read_checklist">Checklist</a>
                        <HR/>
                        <h1>Checklist</h1>
                        <p>Total item:14</p>
                        <p>Item completed:0</p>
                        <label><input type="checkbox">Show only incomplete item</label>
                        <button style="float:right;" class="glyphicon glyphicon-plus" data-toggle="modal" data-target="#add_checklist">Add</button>

                    </div>
                    <table class="table table-striped table-bordered table-hover" cellspacing="0" width="100%" id="tblSample" border="1px">
						<%
							if (result.length > 0) {
						%>
                        <thead style="background-color:lightpink;">
                            <tr>
                                <th>Item</th>
                                <th>Done</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
						<% } %>	

                        <tbody>
						
						<%
							for (var i=0; i<result.length; i++) {
						%>		
                            <tr>
                                <td><%=result[i].item %></td>
								<td>
									<% 
										if (result[i].done == "on") {
									%>
											<input type="checkbox" id="done" name="done" checked>
									<% 
										}	else {
									%>
											<input type="checkbox" id="done" name="done">
									<%
										}
									%>
								</td>								
                                <td><span class="glyphicon glyphicon-pencil"></span></td>
                                <td><span class="glyphicon glyphicon-trash"></span></td>
                            </tr>						
						
						<% } %>

                        </tbody>

                    </table>



                </div>


	  <!-- Modal -->
	  <div class="modal fade" id="add_checklist" role="dialog">
		<div class="modal-dialog">
		
		  <!-- Modal content-->
		  <div class="modal-content">
			<div class="modal-header">
			  <button type="button" class="close" data-dismiss="modal">&times;</button>
			  <h4 class="modal-title">New Checklist Item</h4>
			</div>
			<div class="modal-body">	
			  <form class="form-horizontal" action="add_checklist" method="post" enctype="multipart/form-data">
				<div class="form-group">
				  <label class="control-label col-sm-2" for="item">Item:</label>
				  <div class="col-sm-10">
					<input type="text" class="form-control" id="item" name="item" required>
				  </div>
				</div>
				<div class="form-group">        
				  <div class="col-sm-offset-2 col-sm-10">
					<button type="submit"  class="btn btn-default">Add</button>
				  </div>
				</div>
			  </form>			  
			</div>
			<div class="modal-footer">
			  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
			</div>
		  </div>
		  
		</div>
	  </div>
				
				
				

